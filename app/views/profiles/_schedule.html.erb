<br>
<table class="table table-hover">
	<th>Date</th>
	<th>Game Time</th>
	<th>Location</th>
	<th>Opponent</th>
	<% if current_college_coach %>
		<%= link_to '<i class="fa fa-download"></i> Download my schedule'.html_safe, profile_path(format: 'csv'), id: "video-link" %><br>
	<% else %>	
		<a id="video-link" data-toggle="modal" data-target=".signup-modal-sm"><i class="fa fa-download"></i> Download my schedule</a>
	<% end %>
<br>

Today is <%= (Date.today).strftime("%m/%d/%Y") %> <br><br>
<% @games.each do |game| %>
		<tr>
			<td><%= (game.scheduled_date).strftime("%m/%d/%Y") %></td>
			<td><%= game.scheduled_time %></td>
			<td> <%= game.location %></td>
			<td> <%= game.opponent %></td>
		</tr>
		
<% end %>	
</table>

