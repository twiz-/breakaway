
<!DOCTYPE html>
<html>
<head>
  <title>Breakaway</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <script src="http://cdnjs.cloudflare.com/ajax/libs/jquery-backstretch/2.0.4/jquery.backstretch.min.js"></script>
  <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
  <%= csrf_meta_tags %>
</head>
<body>
<header class="navbar navbar-inverse navbar-fixed-top bs-docs-nav" role="banner">
  <div class="container">
    <div class="navbar-header">
      <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
	  <a class="navbar-brand">Breakaway</a>
    </div>
    <nav class="collapse navbar-collapse bs-navbar-collapse" role="navigation">
      <ul class="nav navbar-nav">
	  <% if user_signed_in?  %>
        <li>
			<%= link_to "Dashboard", dashboard_path %>
        </li>
        <li>
			
        </li>
        <li>
			<%= link_to "All Players", club_players_path %>
        </li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
		  
  	        <li>
				<%= link_to "Sign out coach", destroy_college_coach_session_path, method: :delete if current_college_coach %>
				<%= link_to "Sign out player", destroy_club_player_session_path, method: :delete if current_club_player %>
  	        </li>
	 	  <% else %>
	        <li>
				<%= link_to 'Player', new_club_player_session_path %>
	        </li>
	        <li>
	          <%= link_to 'Coach', new_college_coach_session_path %>
	        </li>
	        <li>
				<%= link_to "All Players", club_players_path %>
	        </li>
		<% end %>

      </ul>
    </nav>
  </div>
</header>
<div class="container" style="margin-top:100px">
	<% if notice %>
		<div class="alert alert-success">
			<button class="close" data-dismiss="alert">x</button>
			<p><%= notice %></p>
		</div>
	<% end %>
	<% if alert %>
		<div class="alert alert-danger">
			<button class="close" data-dismiss="alert">x</button>
			<p><%= alert %></p>
		</div>
	<% end %>
	<div class="row" style="height: 400px;">
		<div class="col-md-8 center-block" style="float:none;text-align:center;margin-bottom:30px;">
			<span id="main-header">Find your next leading goal scorer</span>
		</div>
		<div class="col-md-7 center-block" style="float:none;text-align:center;">
			<%= link_to "Browse Recruits", club_players_path, class: "btn btn-lg btn-marketing"%>
		</div>
	</div>	
</div>
<footer class="footer container">
  <small>
    <a href="http://54footy.com/blog">breakaway</a>
    by 54footy
  </small>
  <nav>
    <ul>
      <li><%= link_to "About", about_path%></li>
      <li><a class="front_contact" href="mailto:tony@54footy.com">Support</a></li>
      <li><a class="front_contact" href="http://localhost:3000/blog">Blog</a></li>
    </ul>
  </nav>
</footer>
<script>
$.backstretch("https://s3-us-west-2.amazonaws.com/presentation-assets/fall_class.jpg")
</script>
</body>
</html>