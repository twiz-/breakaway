
<!DOCTYPE html>
<html>
<head>
  <title>Breakaway</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body class="container">
<header class="navbar navbar-inverse navbar-fixed-top bs-docs-nav" role="banner">
  <div class="container">
    <div class="navbar-header">
      <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
	  <a class="navbar-brand">Breakaway</a>
    </div>
    <nav class="collapse navbar-collapse bs-navbar-collapse" role="navigation">
      <ul class="nav navbar-nav">
	  <% if user_signed_in?  %>
        <li>
			<%= link_to "Dashboard", dashboard_path %>
        </li>
        <li>
			
        </li>
        <li>
			<%= link_to "All Players", players_path %>
        </li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
		  
  	        <li>
				<%= link_to "Sign out coach", destroy_coach_session_path, method: :delete if current_coach %>
				<%= link_to "Sign out player", destroy_player_session_path, method: :delete if current_player %>
  	        </li>
	 	  <% else %>
	        <li>
				<%= link_to 'Player', new_player_session_path %>
	        </li>
	        <li>
	          <%= link_to 'Coach', new_coach_session_path %>
	        </li>
	        <li>
				<%= link_to "All Players", players_path %>
	        </li>
		<% end %>

      </ul>
    </nav>
  </div>
</header>
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
<div class="row" style="background:green;">
	<div class="col-md-7 center-block" style="background:blue;float:none;text-align:center;">
		<h1>Find your next leading goal scorer</h1>
	</div>
	<div class="col-md-7 center-block" style="background:blue;float:none;text-align:center;">
		<%= link_to "Find My Next Recruit", players_path, class: "btn btn-lg btn-success"%>
	</div>
</div>	

<footer class="footer container">
  <small>
    <a href="http://54footy.com/blog">breakaway</a>
    by 54footy
  </small>
  <nav>
    <ul>
      <li><a href="#">About</a></li>
      <li><a href="mailto:tony@54footy.com">Support</a></li>
      <li><a href="http://localhost:3000/blog">Blog</a></li>
    </ul>
  </nav>
</footer>

</body>
</html>