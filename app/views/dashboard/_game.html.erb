<table class="table table-hover">
	<th>Date</th>
	<th>Game Time</th>
	<th>Location</th>
	<th>Opponent</th>
	<th></th>
<% @games.each do |game| %>
		<tr>
			<td><%= game.scheduled_date %></td>
			<td><%= game.scheduled_time %></td>
			<td> <%= game.location %></td>
			<td> <%= game.opponent %></td>
			<% if current_club_player %>
			<td><%= link_to "edit", edit_game_path(game), remote: true %> | <%= link_to "remove", game, method: :delete, data: {confirm: "This can't be undone"} %>  
			</td>
			<% end %>	
		</tr>
<% end %>	
</table>

<div id='edit_game'></div>
