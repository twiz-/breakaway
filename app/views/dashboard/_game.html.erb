<br>
<%= link_to "Add new game", new_game_path, class: "btn btn-success btn-lg" %>
<br>
<br>
<table class="table table-hover">
	<th>Date</th>
	<th>Game Time</th>
	<th>Location</th>
	<th>Opponent</th>
	<th></th>
<% @games.each do |game| %>
		<tr>
			<td><%= (game.scheduled_date).strftime("%m/%d/%Y") %></td>
			<td><%= game.scheduled_time %></td>
			<td> <%= game.location %></td>
			<td> <%= game.opponent %></td>
			<% if current_club_player %>
			<td><%= link_to "edit", edit_game_path(game) %> | <%= link_to "remove", game, method: :delete, data: {confirm: "This can't be undone"} %>  
			</td>
			<% end %>	
		</tr>
<% end %>	
</table>

<div id='edit_game'></div>
