<%= form_for(@listing) do |f| %>
  <% if @listing.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@listing.errors.count, "error") %> prohibited this listing from being saved:</h2>

      <ul>
      <% @listing.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :video %>
    <%= f.text_field :video, class: "form-control", placeholder: "paste in your videos youtube url here" %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control", placeholder: "which player are you? what is this clip showing? who are you playing?"  %>
  </div>
  <div class="actions">
    <%= f.button "Add this Video", class: "btn btn-success btn-lg btn-block" %>
  </div>
<% end %>
